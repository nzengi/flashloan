{
    "name": "flashloan-electron-app",
    "version": "1.0.0",
    "description": "Flash Loan Arbitrage Bot - Desktop Application",
    "main": "src/main/main.js",
    "homepage": "./",
    "scripts": {
        "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
        "start:react": "cd src/renderer && npm start",
        "start:electron": "electron .",
        "build": "cd src/renderer && npm run build",
        "build:electron": "electron-builder",
        "dist": "npm run build && npm run build:electron",
        "dev": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && electron .\"",
        "install:all": "npm install && cd src/renderer && npm install",
        "pack": "electron-builder --dir",
        "dist:win": "npm run build && electron-builder --win",
        "dist:mac": "npm run build && electron-builder --mac",
        "dist:linux": "npm run build && electron-builder --linux"
    },
    "keywords": [
        "electron",
        "flashloan",
        "arbitrage",
        "ethereum",
        "defi",
        "trading",
        "bot"
    ],
    "author": "FlashLoan Bot Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.6.4",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0",
        "cross-env": "^7.0.3"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "node-ipc": "^11.1.0",
        "crypto-js": "^4.2.0",
        "ethers": "^5.7.2",
        "axios": "^1.6.0",
        "winston": "^3.11.0",
        "moment": "^2.29.4",
        "lodash": "^4.17.21",
        "electron-is-dev": "^2.0.0"
    },
    "build": {
        "appId": "com.flashloan.bot",
        "productName": "FlashLoan Arbitrage Bot",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/main/**/*",
            "src/renderer/build/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "assets",
                "to": "assets"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}